<%# debug user %>
<%= div_for(user) do %>
  <!-- Email: <%# user.email %><br>
  Name: <%# user.name %> -->
  <%= form_for user do  |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="actions">
      <%= f.submit "Update #{user.name}"%>
    </div>
  <% end %>
<% end %>
